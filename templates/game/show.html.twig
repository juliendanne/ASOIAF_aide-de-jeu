{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
<main>
    <h1>Game</h1>
                {% set condition = false %}
                
                    {% for team in teams %}
                        {% for player in team.playersInTeam %}
                            {% if user == player %}
                                {% set condition = true %}
                                <h1>ole</h1>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                
{% if (user and user.id == game.author.id)  or (user and condition == true) or is_granted('ROLE_ADMIN') %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ game.date ? game.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>AuthorIsPlayer</th>
                <td>{{ game.authorIsPlayer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ game.format }}</td>
            </tr>
            <tr>
                <th>TournamentGame</th>
                <td>{{ game.tournamentGame ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ game.time ? game.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbTotalPlayer</th>
                <td>{{ game.nbTotalPlayer }}</td>
            </tr>
            <tr>
                <th>NbOfTeam</th>
                <td>{{ game.nbOfTeam }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ game.address }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ game.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ game.city }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ game.department }}</td>
            </tr>
            <tr>
                <th>NbOfGame</th>
                <td>{{ game.nbOfGame }}</td>
            </tr>
            <tr>
                <th>GameStatut</th>
                <td>{{ game.gameStatut }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ game.creationDate ? game.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ModifDate</th>
                <td>{{ game.modifDate ? game.modifDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    {# <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a> #}

    {{ include('game/_delete_form.html.twig') }}
    {% else %}
    <p>Vous n'avez pas la permission d'accéder à cette page</p>
    {% endif %}
    
    </main>
{% endblock %}
