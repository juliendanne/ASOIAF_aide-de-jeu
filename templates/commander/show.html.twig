{% extends 'base.html.twig' %}

{% block title %}Commander{% endblock %}

{% block body %}
    <h1>Commander</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commander.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ commander.name }}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ commander.fullName }}</td>
            </tr>
            <tr>
                <th>Is_a_character</th>
                <td>{{ commander.isACharacter ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>SoloUnit</th>
                <td>{{ commander.soloUnit ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ commander.cost }}</td>
            </tr>
            <tr>
                <th>Card</th>
                <td>{{ commander.card }}</td>
            </tr>
            <tr>
                <th>CardVerso</th>
                <td>{{ commander.cardVerso }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commander_index') }}">back to list</a>

    <a href="{{ path('app_commander_edit', {'id': commander.id}) }}">edit</a>

    {{ include('commander/_delete_form.html.twig') }}
{% endblock %}
