{% extends 'base.html.twig' %}

{% block title %}Attachment{% endblock %}

{% block body %}
    <h1>Attachment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attachment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attachment.name }}</td>
            </tr>
            <tr>
                <th>Is_a_character</th>
                <td>{{ attachment.isACharacter ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ attachment.fullName }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ attachment.cost }}</td>
            </tr>
            <tr>
                <th>Card</th>
                <td>{{ attachment.card }}</td>
            </tr>
            <tr>
                <th>CardVerso</th>
                <td>{{ attachment.cardVerso }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attachment_index') }}">back to list</a>

    <a href="{{ path('app_attachment_edit', {'id': attachment.id}) }}">edit</a>

    {{ include('attachment/_delete_form.html.twig') }}
{% endblock %}
