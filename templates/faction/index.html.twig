{% extends 'base.html.twig' %}

{% block title %}Faction index{% endblock %}

{% block body %}
    <h1>Faction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faction in factions %}
            <tr>
                <td>{{ faction.id }}</td>
                <td>{{ faction.name }}</td>
                <td>
                    <a href="{{ path('app_faction_show', {'id': faction.id}) }}">show</a>
                    <a href="{{ path('app_faction_edit', {'id': faction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_faction_new') }}">Create new</a>
{% endblock %}
